{
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll.markdownlint": "always"
        }
    },
    "markdownlint.config": {
        "default": true,
        "MD013": false
    }
} 